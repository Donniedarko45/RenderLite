# Database
DATABASE_URL="postgresql://user:password@localhost:5432/renderlite?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# GitHub OAuth (scope: user:email, read:user, repo for private repos)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
GITHUB_CALLBACK_URL="http://localhost:3001/auth/github/callback"

# JWT
JWT_SECRET="your_super_secret_jwt_key_change_in_production"

# API
API_PORT=3001
API_URL="http://localhost:3001"

# Frontend
FRONTEND_URL="http://localhost:5173"

# Encryption key for environment variables (32 bytes hex)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Domain for services
BASE_DOMAIN="renderlite.local"

# TLS: set to "true" to enable HTTPS via Let's Encrypt
# When false, Traefik serves HTTP only (for local development)
ENABLE_TLS="false"

# ACME email for Let's Encrypt certificate notifications
ACME_EMAIL="admin@yourdomain.com"

# Development auth bypass (disabled by default)
DEV_AUTH_ENABLED="false"
DEV_AUTH_EMAIL="dev@renderlite.local"
DEV_AUTH_USERNAME="dev-user"
