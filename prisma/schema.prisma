generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ServiceStatus {
  CREATED
  BUILDING
  RUNNING
  FAILED
  STOPPED
}

enum DeploymentStatus {
  QUEUED
  BUILDING
  SUCCESS
  FAILED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  githubId  String?  @unique
  createdAt DateTime @default(now())

  projects  Project[]
}

model Project {
  id        String   @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  services  Service[]

  @@unique([name, userId])
}

model Service {
  id          String        @id @default(uuid())
  projectId   String
  name        String
  repoUrl     String
  branch      String        @default("main")
  runtime     String        // node | python | docker
  subdomain   String        @unique
  status      ServiceStatus @default(CREATED)
  createdAt   DateTime      @default(now())

  project     Project       @relation(fields: [projectId], references: [id])
  deployments Deployment[]
  envVars     EnvVar[]
}

model Deployment {
  id         String            @id @default(uuid())
  serviceId  String
  status     DeploymentStatus  @default(QUEUED)
  logs       String?
  createdAt  DateTime          @default(now())

  service    Service           @relation(fields: [serviceId], references: [id])
}

model EnvVar {
  id        String @id @default(uuid())
  serviceId String
  key       String
  valueEnc  String // encrypted

  service   Service @relation(fields: [serviceId], references: [id])

  @@unique([serviceId, key])
}
